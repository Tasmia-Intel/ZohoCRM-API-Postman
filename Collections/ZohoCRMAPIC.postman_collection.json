				{
					"name": "Create Lead",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"  console.log(\"Access token used:\", pm.environment.get(\"access_token\"));\r",
									"  \r",
									"  const schema = {\r",
									"  type: \"object\",\r",
									"  required: [\"data\"],\r",
									"  properties: {\r",
									"    data: {\r",
									"      type: \"array\",\r",
									"      required: [\"code\", \"details\", \"message\", \"status\"],\r",
									"        properties: {\r",
									"          code: { type: \"string\" },\r",
									"          message: { type: \"string\" },\r",
									"          status: { type: \"string\" },\r",
									"          details: {\r",
									"            type: \"object\",\r",
									"            required: [\"id\"],\r",
									"            properties: {\r",
									"              id: { type: \"string\" }\r",
									"            }\r",
									"          }\r",
									"        }\r",
									"      }\r",
									"    }\r",
									"  };\r",
									"\r",
									"\r",
									"pm.test(\"Create Lead schema validation\", function () {\r",
									"    pm.response.to.have.jsonSchema(schema);\r",
									"});\r",
									"\r",
									"const res=pm.response.json();\r",
									"let leadid=res.data[0].details.id;\r",
									"console.log(leadid);\r",
									"pm.environment.set(\"leadId\",leadid);\r",
									"\r",
									"pm.test(\"Status code is 201\", function () {\r",
									"    pm.response.to.have.status(201);\r",
									"});\r",
									"\r",
									"pm.test(\"Verify code\",()=>{\r",
									"    const res=pm.response.json();\r",
									"    pm.expect(res.data[0].code).to.eql(\"SUCCESS\");\r",
									"})\r",
									"\r",
									"\r",
									"pm.test(\"Created_By name is correct\",()=>{\r",
									"    const res=pm.response.json();\r",
									"    pm.expect(res.data[0].details.Created_By.name).to.be.a(\"string\");\r",
									"    pm.expect(res.data[0].details.Created_By.name).to.eql(\"Tasmia\");\r",
									"});"
